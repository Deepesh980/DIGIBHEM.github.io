    <script>
        function Cost_Calculations (form) 
        {
          
            let Days= form.Days.value;  // No. of days        
            let Persons=form.Persons.value;  // No. of Persons

            //Room rent Calculation
            let Room_rent=document.getElementById("room_cost");  //room cost display
            let a=document.getElementById("Room_Type");

            //Amenities Cost Calculation
            let Amen_Rent=document.getElementById("amen_cost");  //amenities cost display
            let b=document.getElementById("Amenities")

            //Total Amount Calculation
            let Total_Cost=document.getElementById("total_cost");
            
            //Advance Amount Deposited
            let Advance=form.advance.value; 

            // Balance Amount Calculation
            let Balance=document.getElementById("balance");

            if(a.selectedIndex==1)
            {
                if(b.selectedIndex==1 && Persons<=2)
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[1].value*Days)+( Amen_Rent.innerHTML=b.options[1].value*Days))
                    -Advance;
                }
                else
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[1].value*Days+((Persons-2)*Days*1000))+
                    ( Amen_Rent.innerHTML=b.options[1].value*Days))-Advance;
                }

                if(b.selectedIndex==2 && Persons<=2)
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[1].value*Days)+( Amen_Rent.innerHTML=b.options[2].value*Days))
                    -Advance;
                }
                else
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[1].value*Days+((Persons-2)*Days*1000))+
                    ( Amen_Rent.innerHTML=b.options[2].value*Days))-Advance;
                }

                if(b.selectedIndex==3 && Persons<=2)
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[1].value*Days)+( Amen_Rent.innerHTML=b.options[3].value*Days))
                    -Advance;
                }
                else
                {
                    Balance.innerHTML=((Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[1].value*Days+((Persons-2)*Days*1000))
                    +( Amen_Rent.innerHTML=b.options[3].value*Days))-Advance);
                }
            }

            if(a.selectedIndex==2)
            {
                if(b.selectedIndex==1 && Persons<=2)
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[2].value*Days)+( Amen_Rent.innerHTML=b.options[1].value*Days))
                    -Advance;
                }
                else
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[2].value*Days+((Persons-2)*Days*1000))
                    +( Amen_Rent.innerHTML=b.options[1].value*Days))-Advance;
                }

                if(b.selectedIndex==2 && Persons<=2)
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[2].value*Days)+( Amen_Rent.innerHTML=b.options[2].value*Days))
                    -Advance;
                }
                else
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[2].value*Days+((Persons-2)*Days*1000))
                    +( Amen_Rent.innerHTML=b.options[2].value*Days))-Advance;
                }

                if(b.selectedIndex==3 && Persons<=2)
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[2].value*Days)+( Amen_Rent.innerHTML=b.options[3].value*Days))
                    -Advance;
                }
                else
                {
                    Balance.innerHTML=(Total_Cost.innerHTML=(Room_rent.innerHTML=a.options[2].value*Days+((Persons-2)*Days*1000))
                    +( Amen_Rent.innerHTML=b.options[3].value*Days))-Advance;
                }
            }

        }
    </script>
    
